<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:orientation="vertical"    android:padding="@dimen/activity_vertical_margin"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".layout.HomeFragment">    <!-- TODO: Update blank fragment layout -->    <ImageView        android:id="@+id/logo"        android:layout_width="match_parent"        android:layout_height="250dp"        android:background="@android:color/white"        android:src="@drawable/preview" />    <TextView        android:id="@+id/title"        android:layout_marginTop="@dimen/activity_vertical_margin"        android:textStyle="bold"        android:text="@string/app_title"        android:textAlignment="center"        android:layout_width="match_parent"        android:layout_height="wrap_content"/>    <TextView        android:paddingTop="16dp"        android:text="@string/description"        android:textAlignment="center"        android:layout_width="match_parent"        android:layout_height="wrap_content" /></LinearLayout>