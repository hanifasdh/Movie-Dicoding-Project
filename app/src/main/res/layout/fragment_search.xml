<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:orientation="vertical"    android:padding="@dimen/activity_vertical_margin"    android:layout_width="match_parent"    android:layout_height="wrap_content"    tools:context=".layout.SearchFragment">    <LinearLayout        android:id="@+id/form"        android:orientation="horizontal"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <EditText            android:id="@+id/cari"            android:hint="@string/search_movie_title"            android:layout_width="250dp"            android:layout_height="wrap_content" />        <Button            android:id="@+id/tombolcari"            android:text="@string/btnSearch"            android:layout_width="wrap_content"            android:layout_height="wrap_content" />    </LinearLayout>    <android.support.v7.widget.RecyclerView        android:id="@+id/tv_search"        tools:listitem="@layout/list_movie"        android:paddingTop="6dp"        android:layout_width="match_parent"        android:layout_height="wrap_content">    </android.support.v7.widget.RecyclerView></LinearLayout>